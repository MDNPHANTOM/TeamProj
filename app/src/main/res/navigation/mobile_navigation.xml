<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.teamproj.ui.home.ProgressFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_topic"
        android:name="com.example.teamproj.ui.dashboard.TopicFragment"
        android:label="@string/title_topic"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_progress"
        android:name="com.example.teamproj.ui.notifications.NotificationsFragment"
        android:label="@string/title_progress"
        tools:layout="@layout/fragment_notifications" />
</navigation>